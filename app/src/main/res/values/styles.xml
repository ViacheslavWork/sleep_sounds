<?xml version="1.0" encoding="utf-8"?>
<resources>

    //shape appearance

    <style name="mixButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.Theme.WhiteNoise.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="BlueBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_blue_btn</item>
        <item name="android:textAppearance">@style/H2</item>
        <item name="android:textColor">@color/btn_enable_disable_color</item>
    </style>

    <style name="DarkBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_dark_btn</item>
        <item name="android:textAppearance">@style/H2</item>
        <item name="android:textColor">@color/btn_enable_disable_color</item>
    </style>

    <style name="WeekBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_week_btn</item>
        <item name="android:textAppearance">@style/P1</item>
        <item name="android:textColor">@color/btn_enable_disable_color</item>
    </style>

    <style name="OnBoardingBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/text2</item>
        <item name="android:background">@drawable/selector_onboarding_item</item>
    </style>
    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>