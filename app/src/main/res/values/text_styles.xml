<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="semiBoldTextAppearance">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="regularTextAppearance">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    //headers
    <style name="H1" parent="regularTextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="H2" parent="regularTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="H3" parent="semiBoldTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    //text
    <style name="text1" parent="regularTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text2" parent="semiBoldTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text3" parent="semiBoldTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text4" parent="regularTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text5" parent="semiBoldTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text6" parent="regularTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text7" parent="semiBoldTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="P1" parent="regularTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>