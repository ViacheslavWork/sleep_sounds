<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="70dp"
        android:background="@drawable/gradient_liner_bg">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/content_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/content_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

        <Button
            android:id="@+id/off_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/custom_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/custom_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_10_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/off_btn" />

        <Button
            android:id="@+id/minutes_10_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_15_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/custom_btn" />

        <Button
            android:id="@+id/minutes_15_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_20_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_10_btn" />

        <Button
            android:id="@+id/minutes_20_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_30_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_15_btn" />

        <Button
            android:id="@+id/minutes_30_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_40_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_20_btn" />

        <Button
            android:id="@+id/minutes_40_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/minutes_50_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_30_btn" />

        <Button
            android:id="@+id/minutes_50_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 minutes"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hour_1_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_40_btn" />

        <Button
            android:id="@+id/hour_1_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hour"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hour_2_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/minutes_50_btn" />

        <Button
            android:id="@+id/hour_2_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hour_3_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/hour_1_btn" />

        <Button
            android:id="@+id/hour_3_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 hours"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hour_4_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/hour_2_btn" />

        <Button
            android:id="@+id/hour_4_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 hours"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hour_8_btn"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/hour_3_btn" />

        <Button
            android:id="@+id/hour_8_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 hours"
            android:textAppearance="@style/H2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/content_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/content_start"
            app:layout_constraintTop_toBottomOf="@+id/hour_4_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>