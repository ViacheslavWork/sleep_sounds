<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_liner_bg2_rounded_corners"
    android:padding="30dp"
    app:shapeAppearance="@style/ShapeAppearance.WhiteNoise.SmallComponent">

    <ImageView
        android:id="@+id/close_unlock_free_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unlock_free_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlock_for_free"
        android:textAppearance="@style/H2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_unlock_free_btn" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/unlock_free_iv"
        android:layout_width="172dp"
        android:layout_height="170dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mix_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unlock_free_title_tv"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.WhiteNoise.LargeComponent" />

    <TextView
        android:id="@+id/unlock_free_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:text="@string/unlock_free_text"
        android:textAppearance="@style/P1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unlock_free_iv" />

    <Button
        android:id="@+id/watch_video_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/black40"
        android:paddingVertical="10dp"
        android:text="@string/watch_video"
        android:textAppearance="@style/H2"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unlock_free_content_tv"
        app:shapeAppearance="@style/ShapeAppearance.WhiteNoise.LargeComponent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/unlock_all_sounds_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black40"
        android:paddingVertical="10dp"

        android:text="@string/unlock_all"
        android:textAppearance="@style/H2"
        app:icon="@drawable/ic_crown"
        app:iconTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch_video_btn"
        app:shapeAppearance="@style/ShapeAppearance.WhiteNoise.LargeComponent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:src="@drawable/ic_crown"
        app:layout_constraintEnd_toEndOf="@+id/unlock_free_iv"
        app:layout_constraintTop_toTopOf="@+id/unlock_free_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>