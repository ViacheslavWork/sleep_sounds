<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mix_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/photo_remove_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_icon_cross"
            app:layout_constraintBottom_toBottomOf="@+id/photo_edit_iv"
            app:layout_constraintEnd_toEndOf="@+id/photo_iv"
            app:layout_constraintTop_toTopOf="@+id/photo_edit_iv" />

        <ImageView
            android:id="@+id/photo_edit_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_icon_edit"
            app:layout_constraintStart_toStartOf="@id/photo_iv"
            app:layout_constraintTop_toTopOf="@+id/photo_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>